<% category = Category.find(params[:category_id]) %>

<h1>Subcategories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="col">
    <% category.subcategories.each do |subcategory| %>
      <tr>
        <td><%= subcategory.name %></td>
        <td><%= subcategory.desc %></td>
        <td><%= category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subcategory', new_category_subcategory_path %>
